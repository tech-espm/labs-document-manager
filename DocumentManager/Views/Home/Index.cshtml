@{
	ViewBag.Title = Str.Dashboard;
}

<partial name="_UserBasicPermissions" />

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-body text-center">
				Informações 😁
			</div>
		</div>

		<div class="panel panel-default">
			<div class="panel-heading">Cabeçalho</div>
			<div class="panel-body">

				<div class="row">

					<div class="col-sm-3">
						<div class="form-group">
							<label for="cbOptions">
								Opções
								<i class="fa fa-info-circle" id="tooltipInfo" data-toggle="tooltip" data-placement="top" data-html="true" title="" data-title="Info, linha 1<br/>Linha 2"></i>
							</label>
							<select id="cbOptions" class="form-control" size="1">
								<option value="" selected="selected">SELECIONE...</option>
								<option value="1">INSTALAR 25%</option>
								<option value="2">INSTALAR 50%</option>
								<option value="3">INSTALAR TUDO</option>
								<option value="4">NÃO INSTALAR</option>
							</select>
							<script type="text/javascript">prepareCbSearch(_("cbOptions"));</script>
						</div>
					</div>

					<div class="col-sm-3">
						<div class="form-group">
							<label for="txtName">
								Nome
							</label>
							<input id="txtName" class="form-control" type="text" spellcheck="false" />
						</div>
					</div>

					<div class="col-sm-3">
						<div class="form-group">
							<label for="txtCEP">
								CEP
							</label>
							<input id="txtCEP" class="form-control" type="text" spellcheck="false" />
						</div>
					</div>

					<div class="col-sm-3">
						<div class="form-group">
							<label for="txtDate">
								Data
							</label>
							<input id="txtDate" class="form-control" type="text" spellcheck="false" />
						</div>
					</div>

				</div>

				<div class="panel panel-default no-margin-bottom" style="display: none;" id="tablePanel">
					<div class="panel-body dataTable_wrapper">
						<table class="table table-striped table-hover table-row-pointer" id="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nome</th>
									<th>Endereço</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>1</td>
									<td>Teste</td>
									<td>Rua Teste, 45</td>
								</tr>
								<tr>
									<td>2</td>
									<td>Teste 2</td>
									<td>Rua Teste 2, 45</td>
								</tr>
								<tr>
									<td>3</td>
									<td>Teste 3</td>
									<td>Rua Teste 3, 45</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$("#tooltipInfo").tooltip();

		$("#txtCEP").mask("00000-000");

		prepareDatePicker("#txtDate");

		prepareDataTable("table", {
			order: [
				[1, "asc"]
			],
			deferRender: true,
			export: { title: "Pessoas" }
		});

		$("#tablePanel").show();

	</script>
}
